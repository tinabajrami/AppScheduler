@using Microsoft.AspNetCore.Identity
@using AppScheduler_v1.Areas.Identity.Data

@inject UserManager<AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);

    <h3>Welcome, @user.FirstName!</h3>
}

<div class="container">
    <div class="row">
        <div class="card border-dark col-md-4 mx-auto">
            <div class="card-body">
                <h5 class="card-title" style="display:inline;">Appointments  </h5>
                <i class="bi bi-calendar-event" style="display:inline;"></i>
                <p class="card-text">5</p>
                <a href="#" class="btn btn-dark">See all appointments</a>
            </div>
        </div>
        <div class="card border-dark col-md-4 mx-auto">
            <div class="card-body">
                <h5 class="card-title" style="display:inline;">Doctors  </h5>
                <i class="bi bi-calendar-event" style="display:inline;"></i>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                <a href="#" class="btn btn-dark">Go somewhere</a>
            </div>
        </div>
    </div>
</div>

