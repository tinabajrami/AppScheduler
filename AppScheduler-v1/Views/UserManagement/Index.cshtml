@model List<AppScheduler_v1.Areas.Identity.Data.AppUser>

<h1>User Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Admin" asp-action="ChangeUserRole" asp-route-userId="@user.Id">Change Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
